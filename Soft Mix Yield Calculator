<body>

<div class="calculator">
    
    <div class="form-group">
        <label for="cartonSize">Carton Size (Litres)</label>
        <input type="number" id="cartonSize" step="0.01" value="12">
    </div>
    <div class="form-group">
        <label for="overrunPercentage">Overrun Percentage</label>
        <input type="number" id="overrunPercentage" step="1" value="40">
    </div>
    <div class="form-group">
        <label for="servingSize">Serving Size (ml)</label>
        <input type="number" id="servingSize" step="1" value="150">
    </div>
    <div class="form-group">
        <label for="rsp">Recommended Selling Price (RSP) per Serving (£)</label>
        <input type="number" id="rsp" step="0.01" value="2.50">
    </div>
    <button class="btn" onclick="calculateYield()">Calculate</button>
    <div class="result" id="result"></div>
</div>

<script>
    function calculateYield() {
        const cartonSize = parseFloat(document.getElementById('cartonSize').value);
        const overrunPercentage = parseFloat(document.getElementById('overrunPercentage').value);
        const servingSize = parseFloat(document.getElementById('servingSize').value);
        const rsp = parseFloat(document.getElementById('rsp').value);
        
        const totalVolumeLiters = cartonSize * (1 + overrunPercentage / 100);
        const totalVolumeMl = totalVolumeLiters * 1000;
        const servings = totalVolumeMl / servingSize;
        const totalReturn = servings * rsp;

        document.getElementById('result').innerHTML = `
            <p>Total Volume: ${totalVolumeLiters.toFixed(2)} Litres</p>
            <p>Number of Servings: ${servings.toFixed(2)}</p>
            <p>Total Return: £${totalReturn.toFixed(2)}</p>
        `;
    }
</script>

