<body>

<div class="calculator">
        <div class="form-group">
        <label for="caseCost">Case Cost (£)</label>
        <input type="number" id="caseCost" step="0.01" value="0">
    </div>
    <div class="form-group">
        <label for="targetPrice">RSP (£)</label>
        <input type="number" id="targetPrice" step="0.01" value="0">
    </div>
    <div class="form-group">
        <label for="caseSize">Case Size (units)</label>
        <input type="number" id="caseSize" step="1" value="0">
    </div>
    <div class="form-group">
        <label for="vat">VAT (%)</label>
        <input type="number" id="vat" step="0.01" value="0">
    </div>
    <button class="btn" onclick="calculatePOR()">Calculate</button>
    <div class="result" id="result"></div>
</div>

<script>
    function calculatePOR() {
        const caseCost = parseFloat(document.getElementById('caseCost').value);
        const targetPrice = parseFloat(document.getElementById('targetPrice').value);
        const caseSize = parseInt(document.getElementById('caseSize').value);
        const vat = parseFloat(document.getElementById('vat').value);

        if (caseCost > 0 && targetPrice > 0 && caseSize > 0 && vat >= 0) {
            const unitCost = caseCost / caseSize;
            const unitCostWithVAT = unitCost * (1 + vat / 100);
            const profitPerUnit = targetPrice - unitCostWithVAT;
            const por = (profitPerUnit / targetPrice) * 100;

            document.getElementById('result').innerHTML = `
                <p>Unit Cost (with VAT): £${unitCostWithVAT.toFixed(2)}</p>
                <p>Profit per Unit: £${profitPerUnit.toFixed(2)}</p>
                <p>POR: ${por.toFixed(2)}%</p>
            `;
        } else {
            document.getElementById('result').innerHTML = '<p>Please enter valid values for all fields.</p>';
        }
    }
</script>

